<Page
    x:Class="DreamScape.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,20">
            <TextBox x:Name="SearchBox" PlaceholderText="Zoek items..." TextChanged="SearchBox_TextChanged" Margin="0,0,0,10"/>

            <ComboBox x:Name="TypeFilterBox" SelectionChanged="Filter_Changed" PlaceholderText="Filter op Type" Margin="0,0,0,10">
                <ComboBoxItem Content="Alle"/>
                <ComboBoxItem Content="Wapen"/>
                <ComboBoxItem Content="Accessoire"/>
                <ComboBoxItem Content="Armor"/>

            </ComboBox>

            <ComboBox x:Name="RarityFilterBox" SelectionChanged="Filter_Changed" PlaceholderText="Filter op Zeldzaamheid">
                <ComboBoxItem Content="Alle"/>
                <ComboBoxItem Content="Zeldzaam"/>
                <ComboBoxItem Content="Episch"/>
                <ComboBoxItem Content="Legendarisch"/>
            </ComboBox>
        </StackPanel>

        <ListView x:Name="UserItemsListView" Grid.Row="1" ItemClick="UserItemsListView_ItemClick" IsItemClickEnabled="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="{Binding Description}" Foreground="Gray"/>
                            <TextBlock Text="{Binding Type}" FontStyle="Italic"/>
                            <TextBlock Text="{Binding Rarity}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Content="Uitloggen" Click="LogoutButton_Click" Grid.Row="2" HorizontalAlignment="Center" Margin="10"/>
    </Grid>
</Page>
