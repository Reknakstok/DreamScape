<Page
    x:Class="DreamScape.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DreamScape.Pages"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid Padding="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <Button Content="Registreren" Click="RegisterButton_Click" HorizontalAlignment="Center" Margin="0,0,0,50"/>

            <TextBlock Text="Login" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Gebruikersnaam"/>
            <TextBox x:Name="UsernameTextBox" PlaceholderText="Voer je gebruikersnaam in"/>

            <TextBlock Text="Wachtwoord" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" PlaceholderText="Voer je wachtwoord in"/>

            <Button Content="Login" Click="LoginButton_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
